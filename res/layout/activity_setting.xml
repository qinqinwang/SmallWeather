<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacks"
    android:orientation="vertical"
    android:paddingTop="5dip" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackc"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="@string/city_settings"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="@drawable/list_selector"
            android:padding="10dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackc"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="@string/color_settings"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="@drawable/list_selector"
            android:padding="10dip" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackc"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="@string/share_settings"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="@drawable/list_selector"
            android:padding="10dip" />
         </LinearLayout>
         
       <TextView
            android:id="@+id/Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:gravity="center"
            android:text="关于微天气   当前版本号v1.0.0"
            android:textColor="@color/white"
            android:textSize="13sp" />
</LinearLayout>